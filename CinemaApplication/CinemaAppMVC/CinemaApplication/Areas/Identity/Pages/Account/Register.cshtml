@page
@model RegisterModel



<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-150 gradient-custom-3">
        <div class="container h-150">
            <div class="row d-flex justify-content-center align-items-center h-30">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Name" id="form3Example1cg" class="form-control form-control-lg" />
                                    <label asp-for="Input.Name" class="form-label">Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Email" id="form3Example3cg" class="form-control form-control-lg" />
                                    <label asp-for="Input.Email" class="form-label" for="form3Example3cg">Your Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Password" id="form3Example4cg" class="form-control form-control-lg" />
                                    <label asp-for="Input.Password" for="form3Example4cg">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.ConfirmPassword" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <label asp-for="Input.ConfirmPassword" for="form3Example4cdg">Repeat your password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                               

                                <div id="registerSubmit" class="d-flex justify-content-center">
                                    <button type="submit" class=" btn-block btn-lg @*gradient-custom-4*@ text-body">Register</button>
                                </div>


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






